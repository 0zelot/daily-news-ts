{
  "name": "daily-news-ts",
  "version": "1.0.0",
  "description": "Library for displaying Google News RSS, weather, cryptocurrency rates, current moon phase etc.",
  "main": "lib/index.js",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "postinstall": "node postinstall.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/0zelot/daily-news-ts.git"
  },
  "keywords": [
    "daily news",
    "google news",
    "weather",
    "forecast",
    "moon",
    "phase",
    "crypto",
    "cruptocurrency",
    "rates"
  ],
  "author": "Ozelot",
  "license": "MIT",
  "homepage": "https://github.com/0zelot/daily-news-ts#readme",
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "codecov": "^3.8.1",
    "jest": "^26.6.3",
    "prettier": "^1.19.1",
    "ts-jest": "^26.4.4",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0"
  },
  "files": [
    "lib/**/**/**"
  ],
  "dependencies": {
    "@types/node": "^14.14.7",
    "@types/node-fetch": "^2.5.7",
    "colors": "^1.4.0",
    "typescript": "^4.0.5"
  },
  "directories": {
    "lib": "lib"
  }
}
